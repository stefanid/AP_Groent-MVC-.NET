@model ASPAPMVC.Models.Supplier

@{
    var c = ViewBag.Country;
    ViewBag.Title = "Create";

}

<h2>Create Supplier</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                <label class="control-label col-md-2">Supplier Name</label>
                @Html.EditorFor(model => model.Supplier_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Supplier_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <label class="control-label col-md-2">Countries</label>
                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Country, "Select country", new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Overview")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
